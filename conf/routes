# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Walls
GET /walls.json      controllers.WallController.listAllWalls()

GET /wallsbylocation.json         controllers.WallController.listWallsForLocation(startLatitude: Double, startLongitude: Double, stopLatitude: Double, stopLongitude: Double)

# Stories
GET /stories.json       controllers.StoryController.listStoriesForWall(wallId: Long)

GET /storiesinradius.json       controllers.StoryController.listStoriesForWallInRadius(wallId: Long, radius: Double)

# Map static resources from the /public folder to the /assets URL path
GET /assets/*file       controllers.Assets.at(path="/public", file)
