# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET /walls.json?:startLat&:startLong&:stopLat&:stopLong     controllers.WallController.listWallsForLocation(startLat: Double, startLong: Double, stopLat: Double, stopLong: Double)

GET /walls.json         controllers.WallController.listAllWalls()

GET /stories.json       controllers.StoryController.listStoriesForWall(wallId: Long)

# Map static resources from the /public folder to the /assets URL path
GET /assets/*file       controllers.Assets.at(path="/public", file)
